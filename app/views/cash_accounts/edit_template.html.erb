<div class='col-md-12'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='form-group col-md-6'>
        <h3> Edit Cash Account Template </h3>
      </div>

      <%= form_with model: [@cash_account], url: update_template_cash_account_path, class: 'form-horizontal' do |form| %>
        <div class='form-group col-md-12'>
          <div class='col-xs-11 col-sm-11 col-md-11 col-lg-11'>
            <%= form.cktext_area('content', value: File.read("app/views/cash_accounts/cash_account.html.erb"), class: 'form-control') %>
          </div>
        </div>

        <div class='col-md-12'>
          <div class='row'>
            <div class='col-md-6'>
              <div class='form-group col-md-7'>
                <div class='row form-group'>
                  <div class='col-md-8'>
                    <%= form.submit 'Update Template', class: 'btn btn-danger' %>
                  </div>
                </div>
                <div class='row form-group'>
                  <div class='col-md-1'>
                    <%= link_to 'Back to list', cash_account_path(@cash_account), class: 'btn btn-default' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

