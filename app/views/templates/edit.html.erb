<h1> Edit Template </h1>

<%= form_with model: [@template], url: template_path, style:'height:5000px', class: 'form-horizontal' do |form| %>
  <div class='form-group col-md-12'>
    <div class='col-xs-11 col-sm-11 col-md-11 col-lg-11'>
      <%= form.cktext_area('content', value: File.read("app/views/assets/asset_report.html.erb"), row: 500, class: 'form-control ckeditor') %>
    </div>
  </div>

  <div class='col-md-12'>
    <div class='row'>
      <div class='col-md-6'>
        <div class='form-group col-md-7'>
          <div class='row form-group'>
            <div class='col-md-8'>
              <%= form.submit 'Update Template', class: 'btn btn-danger' %>
            </div>
          </div>
          <div class='row form-group'>
            <div class='col-md-1'>
              <%= link_to 'Back to list', root_path, class: 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
