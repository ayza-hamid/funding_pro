<title> User Profile </title>

<div class='row col-md-8'>
  <div class='col-md-12'>
    <h1 class='only-bottom-margin'>User Details</h1>
  </div>
</div>

<div class='col-md-8'>
  <div class='row'>
    <div class='col-md-12'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <div class='row'>
            <div class='col-md-11'>
              <div class='row'>
                <div class='col-md-6'>
                  <div>
                    <span class='text-muted'>Name:</span> <%= @user.name %>
                  </div>

                  <div>
                    <span class='text-muted'>Age:</span> <%= @user.age %>
                  </div>

                  <div>
                    <span class='text-muted'>Marital Status:</span> <%= @user.marital_status.capitalize %>
                  </div>
                </div>
              </div>
              <div class='row'>
              </div>
            </div>
            <div class='col-md-1'>
              <%= link_to 'Edit', edit_user_path(@user), class: 'btn btn-success' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
